extends layout.pug

block content 
  div#dashboard.container
    div.content
      div.row
        div.col-md-1
          div.row
            img#headlamp(src = '/images/headlamp.png')
          div.row
            div#gear
              img#park(src='/images/p.png')
              img#reverse(src='/images/r.png')
              img#neutral(src='/images/n.png')
              img#drive(src='/images/d.png')
        div.col-md-2
            svg#rpm.col-md-7.col-md-offset-2.grayed.svg-container.svg-content-responsive(style="font-family: Helvetica; font-weight: bold;" )
        div.col-md-6
          div.row
            svg#speedometer.col-md-10.col-md-offset-1.svg-container.svg-content-responsive
          div.row
            div#odometer.col-md-8.col-md-offset-2.grayed.svg-container.svg-content-responsive(class='odometer')
        div.col-md-3
          div.row
            img#doorstatus.col-md-4.col-md-offset-8(src = '/images/doorclosed.png')
          div.row
            svg#fuelLevel.col-md-10.grayed.svg-container.svg-content-responsive
            div.col-md-2
          div.row
            div.col-md-12
              h4#fuelLabel Fuel Level
  div#map
    div#capture
  include menu.pug  
  

  
  script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDgN6DtP77GqN7ZtAcqJKTyiB6gFQfkEds&callback=initMap&path=color:blue|weight:5" async defer)
  script(src='/javascripts/map.js')
  script(src='/sampleData.js')
  script(src='/javascripts/script.js')
  script(src='/javascripts/odometer.js')
  script(src='/javascripts/fuelLevelGuage.js')
  script(src='/javascripts/speedometer.js')
  script(src='/javascripts/rpm.js')

  script(src='/javascripts/maindashboard.js')